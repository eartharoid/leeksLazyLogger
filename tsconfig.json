{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "ES2020",
		"module": "Node16",
		"lib": ["ES2020"],
		"strict": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": false,
		"moduleResolution": "Node16",
		"types": ["node"],
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./types"
	},
	"include": ["src/**/*"]
}