{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "ESNext",
		"module": "CommonJS",
		// "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"],
		"strict": true,
		"noImplicitAny": false,
		// "allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": false,
		"moduleResolution": "node",
		"types": ["node"],
		"resolveJsonModule": true
	},
	"include": ["src/**/*"/* , "types/index.d.ts" */]
}